# vim:set ft=sh:
run_hook ()
{
  echo "root=$root"
  export looproot_arg="$root"
  echo "Checking if root=${root} is a loop device..."

  echo "$looproot_arg" | grep "^loop:" > /dev/null
  if [[ $? -eq 0 ]]; then
    echo "root is a loop device..."
    unset root
    looproot_arg="$(echo "$looproot_arg" | cut -d ':' -f 2-)"
    echo "Setting loop_root mount handler"
    mount_handler="looproot_mount_handler"
    return 0
  else
    echo "$root is not a looproot dev, skipping looproot hook"
    return 0
  fi
}

looproot_mount_handler ()
{
  local mount_path="$1"

  #Check arg format
  loop_root_blk_dev=$(echo "$looproot_arg" | cut -d ':' -f 1)
  loop_root_file_path=$(echo "$looproot_arg" | cut -d ':' -f 2)

  echo "Trying to mount $loop_root_file_path located on $loop_root_blk_dev as root"

  if [[ -z "$loop_root_blk_dev" || -z "$loop_root_file_path" ]]; then
    echo "Error: root arg isn't probably formatted"
    return;
  fi

  mkdir -p /host
  mount -o defaults,noatime "$loop_root_blk_dev" /host

  local free_loop_dev="$(losetup -f)"
  losetup "$free_loop_dev" "/host${loop_root_file_path}"
  mount -o defaults "$free_loop_dev" "$mount_path"
  return;
}
